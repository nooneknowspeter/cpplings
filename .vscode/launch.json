{
  "configurations": [
    {
      "name": "cpplings cli",
      "type": "codelldb",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/zig-out/bin/cpplings_cli"
    },
    {
      "name": "cpplings cli: generate patches",
      "type": "codelldb",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/zig-out/bin/cpplings_cli",
      "args": ["-p"]
    },
    {
      "name": "cpplings cli: run against solutions folder",
      "type": "codelldb",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/zig-out/bin/cpplings_cli",
      "args": ["-s"]
    }
  ]
}
